@{
    ViewBag.Title = "Personal";
}
@using (Html.BeginForm("Personal", "Home", FormMethod.Post))
{
    <div class="container-fluid" id="grad1">
        <div class="row justify-content-center mt-0">
            <div class="col-11 col-sm-9 col-md-7 col-lg-6 text-center p-0 mt-3 mb-2">
                <div class="card px-0 pt-4 pb-0 mt-3 mb-3">

                    <div class="row">
                        <div class="col-md-12 mx-0">
                            <form id="msform">
                                <fieldset>
                                    <div class="form-card">
                                        <h2 class="fs-title">Personal Information</h2>
                                        <input type="text" name="fname" placeholder="First Name" />
                                        <input type="text" name="lname" placeholder="Last Name" />
                                        <input type="text" name="phno" placeholder="Contact No." />
                                        <input type="text" name="phno_2" placeholder="Alternate Contact No." />
                                    </div>
                                    @Html.ActionLink("Previous", "Account", "Home", new { @class = "previous action-button-previous" })
                                    @*@Html.ActionLink("Next Step", "Payment", "Home", new { @class = "next action-button" })*@
                                    <input type="submit" class="next action-button" value="Next Step" />

                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}